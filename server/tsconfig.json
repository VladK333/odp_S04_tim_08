{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",                 
    "target": "ES2020",                   
    "lib": ["es2020"],                    
    "types": ["node"],                    
    "esModuleInterop": true,               
    "moduleResolution": "node",            

    /* Other Outputs */
    "sourceMap": true,                    
    "declaration": false,                 

    /* Stricter Typechecking */
    "strict": true,                        
    "noImplicitAny": true,                

    /* Misc */
    "skipLibCheck": true
  }
}
